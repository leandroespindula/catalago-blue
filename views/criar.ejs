<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="/css/style.css" rel="stylesheet">
    <title> Criar </title>
</head>

<body>
    <%- include('./partials/header.ejs') %>
    <main>
        <section id="form__container">
            <form method="post" action="/criar">
                <fieldset>
                    <legend> Criar Carro</legend>
                    <fieldset class="fieldset__data">
                        <input type="text" name="modelo" required>
                        <label for="modelo"> Modelo </label>
                    </fieldset>

                    <fieldset class="fieldset__data">
                        <input type="text" name="marca" required>
                        <label for="marca"> Marca </label>
                    </fieldset>

                    <fieldset class="fieldset__data">
                        <input type="text" name="ano" required>
                        <label for="ano"> Ano </label>
                    </fieldset>

                    <fieldset class="fieldset__data">
                        <input type="url" name="img" required>
                        <label for="img"> url </label>
                    </fieldset>

                    <fieldset class="fieldset__data">
                        <input type="number" name="valor" required>
                        <label for="valor"> valor </label>
                        
                    </fieldset>

                    <fieldset class="fieldset__data">
                        <input type="text" name="descricao" required>
                        <label for="descricao"> descricao </label>
                    </fieldset>
                    <div id="btn__container">
                        <button id="btn__submit" type="submit"> Criar </button>
                    </div>
                </fieldset>
            </form>
        </section>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>

</html>